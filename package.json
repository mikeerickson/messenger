{
  "name": "@codedungeon/messenger",
  "version": "0.9.1",
  "description": "clean node console messaging and logging",
  "license": "MIT",
  "keywords": [
    "node",
    "console",
    "log",
    "error",
    "success",
    "warning",
    "info",
    "debug",
    "logger"
  ],
  "main": "index.js",
  "author": "Mike Erickson <codedungeon@gmail.com> (https://github.com/mikeerickson)",
  "repository": {
    "type": "git",
    "url": "https://github.com/mikeerickson/messenger"
  },
  "devDependencies": {
    "babel-eslint": "10.0.1",
    "chai": "4.2.0",
    "eslint": "5.14.1",
    "eslint-config-prettier": "4.1.0",
    "eslint-plugin-prettier": "3.0.1",
    "growl": "^1.10.0",
    "inverse-dot": "0.1.3",
    "jest": "24.1.0",
    "jest-chain": "1.1.2",
    "jest-dot-reporter": "1.0.7",
    "jest-extended": "0.11.1",
    "mocha": "6.0.2",
    "mocha-each": "1.2.0",
    "nyc": "13.3.0",
    "prettier": "1.16.4",
    "simple-mocha-reporter": "1.0.5",
    "strpad": "1.1.0"
  },
  "scripts": {
    "docker:build": "docker build -f docker/Dockerfile -t dev-node .",
    "docker:run": "docker run  --name messenger -v$(pwd):/usr/code/app:delegated --rm -it dev-node ash -l",
    "docker:test": "docker run  --name messenger -v$(pwd):/usr/code/app:delegated --rm -it dev-node npm run test:ci",
    "format": "prettier --write \"{**/*.js,__tests__/**/*.js}\" --loglevel error",
    "lint": "eslint \"./**/*.{ts,js,vue}\" --fix",
    "test:coverage": "nyc mocha --reporter=dot",
    "test:logger": "mocha ./test/messengerLogger.test.js --reporter spec",
    "test:messenger": "mocha ./test/messengerClass.test.js --reporter simple-mocha-reporter",
    "test:static": "mocha ./test/messengerStatic.test.js --reporter spec",
    "test": "npm run test:messenger && npm run test:logger && npm run test:static",
    "test:full": "mocha \"test/**/*.test.js\" --reporter spec --growl && npm run test:example",
    "test:unit": "npm run test:messenger && npm run test:static && npm run test:static",
    "test:ci": "./node_modules/.bin/mocha \"test/**/*.test.js\"",
    "test:example": "node examples/test_messenger.js && node examples/test_logger.js",
    "test:watch": "./node_modules/.bin/mocha \"test/**/*.test.js\" --watch",
    "test:stress": "./scripts/stress-test.js",
    "pre-commit": "npm run test:ci && npm run format && npm run lint"
  },
  "dependencies": {
    "chalk": "2.4.2",
    "cli-clear": "1.0.4",
    "date-fns": "1.30.1",
    "dumper.js": "1.3.1",
    "fs-extra": "7.0.1",
    "strip-ansi": "5.0.0",
    "window-size": "1.1.1"
  }
}
