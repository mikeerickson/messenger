{
  "name": "@codedungeon/messenger",
  "version": "0.0.17",
  "description": "clean node console messaging and logging",
  "license": "MIT",
  "keywords": [
    "node",
    "console",
    "log",
    "error",
    "success",
    "warning",
    "info",
    "debug",
    "logger"
  ],
  "main": "index.js",
  "author": "Mike Erickson <codedungeon@gmail.com> (https://github.com/mikeerickson)",
  "devDependencies": {
    "@commitlint/cli": "7.2.1",
    "@commitlint/config-conventional": "7.1.2",
    "babel-eslint": "10.0.1",
    "chai": "4.2.0",
    "commitlint": "7.2.1",
    "debug": "4.1.1",
    "eslint": "5.11.1",
    "eslint-config-prettier": "3.3.0",
    "eslint-plugin-prettier": "3.0.1",
    "husky": "1.3.1",
    "inverse-dot": "0.1.3",
    "jest": "23.6.0",
    "jest-chain": "1.0.5",
    "jest-extended": "0.11.0",
    "mocha": "5.2.0",
    "mocha-each": "1.1.0",
    "prettier": "1.15.3",
    "sinon": "7.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "scripts": {
    "bump": "yarn run bump:dev",
    "bump:dev": "version-bump cli pre-release:dev",
    "bump:patch": "version-bump cli patch",
    "bump:minor": "version-bump cli minor",
    "docker:build": "docker build -f docker/Dockerfile -t dev-node .",
    "docker:run": "docker run  --name messenger -v$(pwd):/usr/code/app:delegated --rm -it dev-node ash -l",
    "lint": "eslint ./src/**/*.js",
    "test:jest:full": "jest ./__tests__/*.spec.js --notify",
    "test:jest:unit": "jest ./__tests__/*.spec.js --reporters jest-dot-reporter --notify",
    "test:mocha:full": "mocha ./tests/*.spec.js",
    "test:mocha:unit": "mocha ./tests/*.spec.js",
    "test": "yarn run test:mocha:unit",
    "test:ci": "yarn run test:mocha:unit --reporter dot",
    "pre-commit": "yarn run test && yarn run lint"
  },
  "dependencies": {
    "chalk": "2.4.1",
    "dumper.js": "1.3.0",
    "fs-extra": "7.0.1",
    "jest-dot-reporter": "1.0.7",
    "pad": "2.2.1",
    "repeating": "3.0.0",
    "strip-ansi": "5.0.0",
    "window-size": "1.1.1"
  },
  "jest": {
    "globals": {
      "NODE_ENV": "test"
    }
  }
}
