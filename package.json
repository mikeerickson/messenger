{
  "name": "@codedungeon/messenger",
  "version": "0.4.1",
  "description": "clean node console messaging and logging",
  "license": "MIT",
  "keywords": [
    "node",
    "console",
    "log",
    "error",
    "success",
    "warning",
    "info",
    "debug",
    "logger"
  ],
  "main": "index.js",
  "author": "Mike Erickson <codedungeon@gmail.com> (https://github.com/mikeerickson)",
  "devDependencies": {
    "@commitlint/cli": "7.5.0",
    "@commitlint/config-conventional": "7.5.0",
    "babel-eslint": "10.0.1",
    "chai": "4.2.0",
    "commitlint": "7.5.0",
    "eslint": "5.13.0",
    "eslint-config-prettier": "4.0.0",
    "eslint-plugin-prettier": "3.0.1",
    "husky": "1.3.1",
    "inverse-dot": "0.1.3",
    "jest": "24.0.0",
    "jest-chain": "1.1.2",
    "jest-dot-reporter": "1.0.7",
    "jest-extended": "0.11.1",
    "mocha": "5.2.0",
    "mocha-each": "1.2.0",
    "nyc": "13.1.0",
    "prettier": "1.16.3",
    "simple-mocha-reporter": "1.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "scripts": {
    "docker:build": "docker build -f docker/Dockerfile -t dev-node .",
    "docker:run": "docker run  --name messenger -v$(pwd):/usr/code/app:delegated --rm -it dev-node ash -l",
    "docker:test": "docker run  --name messenger -v$(pwd):/usr/code/app:delegated --rm -it dev-node yarn test:ci",
    "format": "prettier --write \"{**/*.js,__tests__/**/*.js}\" --loglevel error",
    "lint": "eslint ./src/**/*.js",
    "test:coverage": "nyc mocha --reporter=dot",
    "test:jest:full": "jest ./__tests__/*.test.js --notify",
    "test:jest:unit": "jest ./__tests__/*.test.js --reporters jest-dot-reporter --notify",
    "test:logger": "mocha ./test/messengerLogger.test.js",
    "test:messenger": "mocha ./test/messengerClass.test.js --reporter spec",
    "test:static": "mocha ./test/messengerStatic.test.js --reporter spec",
    "test": "yarn run test:messenger && yarn run test:logger && yarn run test:static",
    "test:full": "mocha \"test/**/*.test.js\" --reporter spec --growl",
    "test:unit": "yarn run test:messenger && yarn run test:static && yarn run test:static",
    "test:ci": "./node_modules/.bin/mocha \"test/**/*.test.js\"",
    "test:watch": "./node_modules/.bin/mocha \"test/**/*.test.js\" --watch",
    "test:stress": "./scripts/stress-test.js",
    "pc": "yarn run pre-commit",
    "pre-commit": "yarn run test:ci && yarn run format && yarn run lint"
  },
  "dependencies": {
    "chalk": "2.4.2",
    "date-fns": "2.0.0-alpha.27",
    "dumper.js": "1.3.0",
    "fs-extra": "7.0.1",
    "strip-ansi": "5.0.0",
    "window-size": "1.1.1"
  }
}
